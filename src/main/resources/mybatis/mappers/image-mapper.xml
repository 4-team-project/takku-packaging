<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.takku.project.mapper.ImageMapper">

	<!-- 이미지 등록 -->
	<insert id="insertImageUrl" parameterType="ImageDTO">
		INSERT INTO
		takku_image (review_id, image_url, product_id, funding_id)
		VALUES (
		#{reviewId, jdbcType=INTEGER},
		#{imageUrl, jdbcType=VARCHAR},
		#{productId, jdbcType=INTEGER},
		#{fundingId, jdbcType=INTEGER}
		)
	</insert>

	<!-- 펀딩 사진 업데이트 -->
	<update id="updateFundingIdByImageId" parameterType="map">
		UPDATE takku_image
		SET funding_id = #{fundingId}
		WHERE image_id = #{imageId}
	</update>

	<!-- 이미지 삭제 -->
	<delete id="deleteImageUrl" parameterType="String">
		DELETE FROM
		takku_image
		WHERE image_url = #{imageUrl}
	</delete>

	<!-- 펀딩 id로 이미지 조회 -->
	<select id="selectImagesByFundingId" parameterType="int"
		resultType="ImageDTO">
		SELECT *
		FROM takku_image
		WHERE funding_id = #{fundingId}
	</select>

	<!-- 리뷰 id로 이미지 조회 -->
	<select id="selectImagesByReviewId" parameterType="int"
		resultType="ImageDTO">
		SELECT *
		FROM takku_image
		WHERE review_id = #{reviewId}
	</select>

	<!-- 상품 id로 이미지 조회 -->
	<select id="selectImagesByProductId" parameterType="int"
		resultType="ImageDTO">
		SELECT * FROM takku_image WHERE product_id = #{productId}
	</select>

	<!-- 펀딩만들기 -> 이미지 등록 -->
	<insert id="insertImage" parameterType="ImageDTO">
		INSERT INTO image
		(funding_id, image_url)
		VALUES (
		#{fundingId, jdbcType=INTEGER},
		#{imageUrl, jdbcType=VARCHAR}
		)
	</insert>

</mapper>
